<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profile_1"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:src="@drawable/profile_1"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profile_2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/profile_2"
        app:layout_constraintTop_toBottomOf="@id/profile_1"
        app:layout_constraintEnd_toEndOf="@id/profile_1"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get \nStarted"
        android:layout_marginTop="48dp"
        android:textSize="55sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginRight="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_2"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Grow together"
        android:layout_marginRight="218dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"/>

    <Button
        android:id="@+id/joinNowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN NOW"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#000000"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"/>


</androidx.constraintlayout.widget.ConstraintLayout>